/* pages/order/order.wxss */
.scroll_view {
  background-color: #fff;
  white-space: nowrap;
}

.tab {
  display: flex;
  text-align: center;
}

.tab .tab_item {
  height: 100rpx;
  display: inline-block;
  line-height: 100rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
  flex: 1;
  color: rgb(196, 196, 196);
  font-size: 36rpx;
}

.tab .select {
  color: rgb(27, 154, 220);
  border-bottom: 5rpx solid rgb(27, 154, 220);
}

.body .tips {
  width: 100%;
  background-image:rgb(117, 200, 245);
  text-align: center;
  color: #fff;
  padding: 10rpx 0;
  font-size: 35rpx;
}

.order {
  background-color: #fff;
  width: 85%;
  margin: 0 auto;
  border-radius: 25rpx;
  padding: 25rpx;
  margin-top: 30rpx;
}

.order .order_top {
  display: flex;
  justify-content: space-between;
  align-items: center;

}

.order .order_top .top_left {
  display: flex;
}

.order .order_top .top_left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.order .order_top .top_left .name {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.order .order_top .top_left .name text:nth-child(2) {
  color: #aaa;
  font-size: 26rpx;
}

.order .order_top .top_right {
  color: rgb(2, 221, 148);
  background-color: rgb(133, 227, 198, 0.2);
  padding: 15rpx 30rpx;
  border: 15rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
}

.order .order_content {
  padding-left: 100rpx;
  padding-top: 15rpx;
  font-size: 33rpx;
}

.order .order_content .address {
  color: #1067d1;
  font-size: 28rpx;
  padding-top: 20rpx;
}

.order_bottom {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.order_bottom .money {
  color: rgb(250, 14, 14);
  background-color: rgb(253, 238, 238);
  padding: 15rpx 25rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.order_bottom .accept {
  color: white;
  background-color: rgb(68, 181, 241);
  margin-left: 25rpx;
  padding: 15rpx 50rpx;
  border-top-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  font-size: 28rpx;
}